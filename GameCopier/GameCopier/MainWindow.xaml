<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="GameCopier.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameCopier"
    xmlns:viewmodels="using:GameCopier.ViewModels"
    xmlns:models="using:GameCopier.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GameDeploy Kiosk">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid DataContext="{x:Bind ViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE91B;" FontSize="24" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" Margin="0,0,12,0"/>
                <TextBlock Text="GameDeploy Kiosk" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="8" Padding="6,2" Margin="12,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" Fill="LimeGreen" VerticalAlignment="Center"/>
                        <TextBlock Text="USB LIVE" FontSize="10" Foreground="White" FontWeight="Medium" Margin="4,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <Button Grid.Column="1" x:Name="SettingsButton" 
                   Command="{Binding ShowSettingsCommand}"
                   ToolTipService.ToolTip="Settings and Force Refresh">
                <FontIcon Glyph="&#xE713;" FontSize="16"/>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*" MinWidth="200"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="1.5*" MinWidth="250"/>
            </Grid.ColumnDefinitions>

            <!-- Library Tabs Section -->
            <Grid Grid.Column="0">
                <TabView>
                    <!-- Games Tab -->
                    <TabViewItem Header="Games">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="GAME LIBRARY" FontWeight="SemiBold" FontSize="14" 
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Margin="12,0,0,0" FontSize="10" Padding="8,4" 
                                       Command="{Binding RefreshLibraryCommand}" 
                                       Background="Transparent" BorderThickness="1"
                                       ToolTipService.ToolTip="Refresh Library">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xE72C;" FontSize="10" Margin="0,0,4,0"/>
                                        <TextBlock Text="Refresh" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                                <Button Margin="12,0,0,0" FontSize="10" Padding="8,4" 
                                       Command="{Binding AddGameFolderCommand}" 
                                       Background="Transparent" BorderThickness="1"
                                       ToolTipService.ToolTip="Add new game folder">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xE8B5;" FontSize="10" Margin="0,0,4,0"/>
                                        <TextBlock Text="Add Folder" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Simple search box for testing -->
                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                

                                <TextBox Grid.Column="0" x:Name="SearchBox" PlaceholderText="Search games..." 
                                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                <Button Grid.Column="1" Content="Clear" Margin="8,0,0,0"
                                       Command="{Binding ClearSearchCommand}"
                                       Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </Grid>

                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                <!-- Search results info -->
                                <TextBlock Text="{Binding GameSearchResultsText}" 
                                          FontSize="11" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,0,8"
                                          Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                 
                                <ListView x:Name="GamesListView" ItemsSource="{Binding FilteredGames}"
                                         SelectionMode="None" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         CornerRadius="8" Padding="8">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Game">
                                            <Grid Padding="12,8" Background="Transparent">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <RadioButton Grid.Column="0" 
                                                           IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                           GroupName="GameSelection"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                                           DoubleTapped="GameItem_DoubleTapped"
                                                           ToolTipService.ToolTip="Double-click to open folder in Explorer">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="12" 
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>

                                                <FontIcon Grid.Column="2" Glyph="&#xE91B;" FontSize="14" 
                                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Grid>
                    </TabViewItem>

                    <!-- Software Tab -->
                    <TabViewItem Header="Software">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="SOFTWARE LIBRARY" FontWeight="SemiBold" FontSize="14" 
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                                <Button Margin="12,0,0,0" FontSize="10" Padding="8,4" 
                                       Command="{Binding RefreshSoftwareLibraryCommand}" 
                                       Background="Transparent" BorderThickness="1"
                                       ToolTipService.ToolTip="Refresh Software Library">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xE72C;" FontSize="10" Margin="0,0,4,0"/>
                                        <TextBlock Text="Refresh" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                                <Button Margin="12,0,0,0" FontSize="10" Padding="8,4" 
                                       Command="{Binding AddSoftwareFolderCommand}" 
                                       Background="Transparent" BorderThickness="1"
                                       ToolTipService.ToolTip="Add new software folder">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xE8B5;" FontSize="10" Margin="0,0,4,0"/>
                                        <TextBlock Text="Add Folder" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Simple search box for testing -->
                            <Grid Grid.Row="1" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                

                                <TextBox Grid.Column="0" x:Name="SoftwareSearchBox" PlaceholderText="Search software..." 
                                        Text="{Binding SoftwareSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                <Button Grid.Column="1" Content="Clear" Margin="8,0,0,0"
                                       Command="{Binding ClearSoftwareSearchCommand}"
                                       Visibility="{Binding SoftwareSearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </Grid>

                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                <!-- Search results info -->
                                <TextBlock Text="{Binding SoftwareSearchResultsText}" 
                                          FontSize="11" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Margin="0,0,0,8"
                                          Visibility="{Binding SoftwareSearchText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                 
                                <ListView x:Name="SoftwareListView" ItemsSource="{Binding FilteredSoftware}"
                                         SelectionMode="None" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         CornerRadius="8" Padding="8">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Software">
                                            <Grid Padding="12,8" Background="Transparent">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <RadioButton Grid.Column="0" 
                                                           IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                           GroupName="SoftwareSelection"
                                                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                                           DoubleTapped="SoftwareItem_DoubleTapped"
                                                           ToolTipService.ToolTip="Double-click to open folder in Explorer">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="12" 
                                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>

                                                <FontIcon Grid.Column="2" Glyph="&#xE770;" FontSize="14" 
                                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Grid>
                    </TabViewItem>
                </TabView>
            </Grid>

            <!-- Target Drives Section -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="USB DRIVES" FontWeight="SemiBold" FontSize="14" 
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                    <Border Background="LimeGreen" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                        <TextBlock Text="AUTO" FontSize="8" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <Button x:Name="RefreshDrivesButton" HorizontalAlignment="Stretch" 
                           Command="{Binding LoadDrivesCommand}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE72C;" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Manual Refresh"/>
                        </StackPanel>
                    </Button>
                    
                    <TextBlock Text="🔌 Plug/unplug USB drives to test auto-detection" 
                              FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>

                <ListView Grid.Row="2" x:Name="DrivesListView" ItemsSource="{Binding AvailableDrives}"
                         SelectionMode="None" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                         CornerRadius="8" Padding="8">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Drive">
                            <Grid Padding="12,8" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <RadioButton Grid.Column="0" 
                                               IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                               GroupName="DriveSelection"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="12" 
                                                  TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding EnhancedDescription}" FontSize="10" 
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding SizeDisplay}" FontSize="10" 
                                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <!-- Most recent indicator (only shown for recently plugged drives) -->
                                        <Border Background="Orange" CornerRadius="8" Padding="4,2" Margin="0,0,4,0"
                                               Visibility="{Binding IsRecentlyPlugged, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="NEWEST" FontSize="8" Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                        
                                        <!-- USB indicator -->
                                        <FontIcon Glyph="&#xE88E;" FontSize="12" 
                                                 Foreground="LimeGreen"
                                                 ToolTipService.ToolTip="USB Drive"/>
                                    </StackPanel>
                                </Grid>

                                <ProgressBar Grid.Row="1" Value="{Binding UsagePercentage}" 
                                           Margin="0,4,0,0" Height="4"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Deployment Queue Section -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="COPY QUEUE" FontWeight="SemiBold" FontSize="14" 
                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" VerticalAlignment="Center"/>
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                        <TextBlock Text="{Binding DeploymentJobs.Count}" FontSize="8" Foreground="White" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="Overall Progress" FontSize="12" Margin="0,0,0,4"/>
                    <ProgressBar Value="{Binding OverallProgress}" Height="8" CornerRadius="4"/>
                    <TextBlock Text="{Binding OverallProgress, Converter={StaticResource ProgressConverter}}" 
                              FontSize="10" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                </StackPanel>

                <ListView Grid.Row="2" x:Name="JobsListView" ItemsSource="{Binding DeploymentJobs}"
                         SelectionMode="None" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                         CornerRadius="8" Padding="8">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:DeploymentJob">
                            <Grid Padding="8,6" Background="Transparent">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DisplayName}" FontSize="11" FontWeight="Medium"
                                          TextTrimming="CharacterEllipsis"/>

                                <!-- Control buttons -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                    
                                    <!-- Pause button (only for InProgress jobs) -->
                                    <Button Command="{Binding DataContext.PauseJobCommand, ElementName=JobsListView}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" BorderThickness="0" Padding="4"
                                           ToolTipService.ToolTip="Pause this job"
                                           Visibility="{Binding CanPause, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE769;" FontSize="10" Foreground="Orange"/>
                                    </Button>

                                    <!-- Resume button (only for Paused jobs) -->
                                    <Button Command="{Binding DataContext.ResumeJobCommand, ElementName=JobsListView}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" BorderThickness="0" Padding="4"
                                           ToolTipService.ToolTip="Resume this job"
                                           Visibility="{Binding CanResume, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE768;" FontSize="10" Foreground="LimeGreen"/>
                                    </Button>

                                    <!-- Cancel button (for all active jobs) -->
                                    <Button Command="{Binding DataContext.CancelJobCommand, ElementName=JobsListView}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" BorderThickness="0" Padding="4"
                                           ToolTipService.ToolTip="Cancel this job"
                                           Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                    </Button>

                                    <!-- Remove button (only for pending jobs) -->
                                    <Button Command="{Binding DataContext.RemoveFromQueueCommand, ElementName=JobsListView}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" BorderThickness="0" Padding="4"
                                           ToolTipService.ToolTip="Remove from queue"
                                           Visibility="{Binding Status, Converter={StaticResource PendingStatusToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE74D;" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </Button>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding StatusDisplay}" FontSize="10" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,2"/>

                                <ProgressBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Value="{Binding Progress}" Height="3" 
                                           Visibility="{Binding Status, Converter={StaticResource StatusToProgressVisibilityConverter}}"/>

                                <!-- Job timing info -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" FontSize="9"
                                          Foreground="{ThemeResource TextFillColorTertiaryBrush}" Margin="0,4,0,0"
                                          Visibility="{Binding StartedAt, Converter={StaticResource NullToVisibilityConverter}}">
                                    <Run Text="Started: "/>
                                    <Run Text="{Binding StartedAt, Converter={StaticResource DateTimeToStringConverter}}"/>
                                    <Run Text="{Binding PausedAt, Converter={StaticResource PausedTimeConverter}}"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding StatusText}" 
                      VerticalAlignment="Center" FontSize="14"/>

            <!-- Copy Queue Actions -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,0,12,0">
                <Button Command="{Binding AddToQueueCommand}"
                       Background="{ThemeResource AccentFillColorDefaultBrush}" 
                       ToolTipService.ToolTip="Add selected item and auto-start copying">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE710;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="ADD &amp; COPY" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ClearQueueCommand}"
                       Background="{ThemeResource SystemFillColorCautionBrush}"
                       ToolTipService.ToolTip="Clear all pending jobs from queue">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE74D;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="CLEAR" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Queue Control Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <Button Command="{Binding PauseQueueCommand}"
                       IsEnabled="{Binding IsDeploymentRunning}"
                       Background="{ThemeResource SystemFillColorCriticalBrush}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE769;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="PAUSE"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding StartQueueCommand}"
                       IsEnabled="{Binding IsDeploymentRunning, Converter={StaticResource InverseBooleanConverter}}"
                       Background="{ThemeResource AccentFillColorDefaultBrush}" MinWidth="180">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE768;" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="START QUEUE" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
