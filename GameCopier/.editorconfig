root = true

# All files
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = space
indent_size = 4
charset = utf-8-bom

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_style = space
indent_size = 2
charset = utf-8

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_style = space
indent_size = 2
charset = utf-8

# XAML files
[*.{xaml,xamlx}]
indent_style = space
indent_size = 4
charset = utf-8

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2
charset = utf-8

# Markdown files
[*.{md,mdx}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
charset = utf-8

# Script files
[*.{ps1,bat,cmd,sh}]
charset = utf-8

# Text files
[*.{txt,log}]
charset = utf-8

# Configuration files
[*.{ini,cfg,conf}]
charset = utf-8